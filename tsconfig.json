{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"]
}
